<%- include('../partials/dashboard-open', {title: 'admin | sistem penerimaan pegawai'}) %>

<div class="mockup-window bg-base-100">
	<div class="p-4 bg-base-100">
		<a href="/dashboard-admin/admin/new" class="btn btn-secondary mb-4">tambah admin</a>
		<div class="overflow-x-auto border rounded-lg">
	        <table class="table w-full">
	            <thead>
	                <tr>
	                    <th>#</th>
	                    <th>username</th>
	                    <th>action</th>
	                </tr>
	            </thead>
	            <tbody>
	                <%
	                	let no = 1

	                	for(admin of admins) {
	                %>
                        <tr class="hover">
                            <th><%= no++ %></th>  
                            <td><%= admin.username %></td>
                            <td>
                                <a href="/dashboard-admin/admin/edit/<%= admin.id %>" class="btn btn-warning">edit</a>
                                <a href="/dashboard-admin/admin/delete/<%= admin.id %>" class="btn btn-error">delete</a>
                            </td>
                        </tr>
					<%	} %>
	            </tbody>
	        </table>
	    </div>
	</div>
</div>
<%- include('../partials/dashboard-close', {active: 'admin'}) %>