<%- include('../partials/dashboard-open', {title: 'loker | sistem penerimaan pegawai'}) %>

<div class="mockup-window bg-base-100" x-data="{ nilai: <%= data.nilai %> }">
	<div class="p-4 bg-base-100">
		<a href="/dashboard-admin/loker/<%= data.loker_id %>" class="btn btn-ghost mb-4 text-secondary">
			<i class="ph-arrow-fat-left mr-2"></i>
			kembali
		</a>

		<form method="post">
			<div class="form-control w-full mb-12">
				<label class="label">Nama Kandidat</label>
				<input type="text" class="input input-bordered" value="<%= data.nama_kandidat %>" disabled>
			</div>


			<div class="form-control w-full mb-12">
				<label class="label">Nama Kriteria</label>
				<input type="text" class="input input-bordered" value="<%= data.nama_kriteria %>" disabled>
			</div>
			
			<div class="form-control w-full mb-12">
				<label for="nilai" class="label">Nilai</label>
				<input id="nilai" x-model="nilai" type="number" value="<%= data.nilai %>" min="0" max="10" class="input input-bordered" name="nilai" required>
				<p class="label-alt"><span class="text-error">**</span>gunakan skala 0-10</p>
			</div>
	
			<button type="submit" class="btn btn-primary" x-show="nilai <= 10 && nilai >= 0">
				<i class="ph-floppy-disk mr-2 text-xl"></i>
				simpan
			</button>
		</form>

	</div>
</div>

<%- include('../partials/dashboard-close', {active: 'loker'}) %>