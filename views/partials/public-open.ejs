<%- include('header') %>
	<nav class="fixed top-0 inset-x-0 z-50  bg-base-100">
		<div class="container mx-auto flex justify-between items-center py-4 px-6">
			<a href="/" class="font-thin text-xl hover:pointer-cursor  hover:text-secondary">
				CV. EKA BOGA PRATAMA
			</a>
			<% if(locals.user && locals.user.role == 'kandidat') { -%>
				<a href="/profile" class="btn btn-ghost">halo , <%= locals.user.username %></a>
			<% } else if(locals.user && locals.user.role == 'admin'){ -%>
				<a href="/dashboard-admin" class="btn btn-ghost">dashboard</a>
			<% } else { -%>
				<div>
					<a href="/register" class="btn btn-neutral mr-2">register</a>
					<a href="/login" class="btn btn-primary">login</a>
				</div>
			<% } -%>
		</div>
	</nav>
	<main class="container min-h-screen mx-auto px-4 py-20 bg-neutral">
		<% if (locals.error) { -%>
            <div class="alert alert-error my-6">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    <span><%= locals.error %></span>
                </div>
            </div>    
        <% } -%>